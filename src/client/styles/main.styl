@import url('https://fonts.googleapis.com/css?family=Open+Sans:300,400,600&subset=latin-ext');

*
  margin 0
  padding 0
  border 0
  outline 0
  box-sizing border-box

ul
  list-style none

$base-font-color = #444
$gutter = 16px

html
  height 100%

body
  font-size 14px
  color $base-font-color
  background #f3f3f3
  font-family 'Open Sans', sans-serif
  font-weight 300
  min-height 100%

input, button, textarea
  font-family 'Open Sans', sans-serif
  font-weight 300
  outline none
  color $base-font-color
  border 1px solid #e7e7e7

button
  background #fff
  padding 10px 15px
  border-radius 2px
  cursor pointer
  transition background .2s

  &:hover
    border 1px solid #ddd
    background darken(#fff, 5%)

h1, h2, h3
  font-weight 300

.icon
  display inline-block
  svg
    width 100%
    height 100%

#wrapper
  min-height 100vh
  display flex

#main-wrapper
  flex 1
  height 100%
  display flex
  flex-direction column

  & > header
    height 50px
    padding 10px
    background #fff
    border-bottom 1px solid #e7e7e7

#main
  flex 1
  display flex
  flex-direction column

card()
  flex 1
  display flex
  flex-direction column
  margin $gutter
  background #fff
  border 1px solid #e7e7e7

.material-input
  position relative
  display block
  padding 15px 0 30px 0

  textarea
    resize none

  input[type=text], input[type=number], textarea
    border none
    border-bottom 1px solid #bbb
    font-size 16px
    padding 5px 0
    &:focus
      border-bottom 1px solid #26a69a
      box-shadow 0 1px 0 #26a69a
      & ~ span
        color #26a69a

  span
    font-size 16px
    position absolute
    top 20px
    left 0
    transition all .2s

  input:focus ~ span, textarea:focus ~ span, .active
    top 0
    font-size 12px

.error
  position absolute
  top 100px
  left 50%
  transform translate(-50%, 0)
  width 500px
  background red
  padding 16px
  z-index 2

@require './product-details.styl'
@require './product-list.styl'
@require './navigation.styl'
