@import url('https://fonts.googleapis.com/css?family=Open+Sans:300,400,600&subset=latin-ext');

*
  margin 0
  padding 0
  list-style none
  box-sizing border-box

$base-font-color = #444

body
  font-size 14px
  color $base-font-color
  background #f3f3f3
  font-family 'Open Sans', sans-serif
  font-weight 300

input, button, textarea
  font-family 'Open Sans', sans-serif
  font-weight 300
  outline none
  color $base-font-color
  border 1px solid #e7e7e7

button
  background #fff
  padding 10px 15px
  border-radius 2px
  cursor pointer

  &:hover
    border 1px solid #ddd
    background #e6e6e6

h1, h2, h3
  font-weight 300

.icon
  display inline-block
  margin 5px
  svg
    width 100%
    height 100%

#wrapper
  height 100%
  display flex

#nav
  width 200px
  background #2f4050
  color #a7b1c2
  font-weight 400
  li
    padding 15px
    cursor pointer
    &:hover
      background #293846
      color #fff
      svg
        fill #fff
  .icon
    width 12px
    height 12px
    svg
      fill #a7b1c2

#main-wrapper
  flex 1
  height 100%
  display flex
  flex-direction column

  & > header
    height 50px
    padding 10px
    background #fff
    border-bottom 1px solid #e7e7e7

#main
  flex 1
  display flex
  flex-direction column

.product-list .products
  flex 1
  display flex
  flex-direction column

  li
    display flex
    border-bottom 1px solid #e7e7e7
    &:first-child
      border-bottom 1px solid #ddd

    even = #ffffff
    odd  = #f9f9f9
    amount = 5%

    background even

    &:not(.header)
      cursor pointer
      &:nth-child(odd)
        background odd

      &:hover
        background darken(even, amount)

  .field
    flex 1
    padding 10px 15px

  .loader
    flex 1
    display flex
    align-items center
    justify-content center

  .header
    font-weight 400

  .id
    flex initial
    width 20px
  .price
    flex initial
    width 100px

.card
  flex 1
  display flex
  flex-direction column
  margin 15px
  background #fff
  border 1px solid #e7e7e7

  h2
    flex 1

  header
    display flex
    align-items flex-start
    padding 15px

label
  position relative
  display block
  padding 15px 0 30px 0

  textarea
    resize none

  input, textarea
    border none
    border-bottom 1px solid #bbb
    font-size 16px
    padding 5px 0
    &:focus
      border-bottom 1px solid #26a69a
      box-shadow 0 1px 0 #26a69a
      & ~ span
        color #26a69a

  span
    font-size 16px
    position absolute
    top 20px
    left 0
    transition all .2s

  input:focus ~ span, textarea:focus ~ span, .active
    top 0
    font-size 12px

.product-details .product
  input, label, textarea
    width 100%
  textarea
    height 100px
  h1
    margin 15px
  .details
    display flex
  .info, .photos
    flex 1
    margin 15px

  .tags
    margin 0 0 30px 0
    padding 2.5x
    display flex
    flex-wrap wrap
    .tag
      height 32px
      margin 2.5px
      border-radius 16px
      background #e6e6e6
      padding 8px
      font-size 16px
      line-height 1
    input
      height 32px
      margin 2.5px
      padding 8px
      font-size 16px
      border none

  [type=file]
    visibility hidden
    width 0
  .photos label
    border 2px dashed #e7e7e7
    border-radius 15px
    margin 0
    padding 0
    height 125px
    display flex
    align-items center
    justify-content center
  .photos
    ul
      display flex
      align-items stretch
      flex-wrap wrap
      margin 7.5px
    li
      width 50%
      padding 7.5px
    img
      width 100%
