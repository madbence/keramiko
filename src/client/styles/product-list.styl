.product-list
  flex 1
  display flex
  flex-direction column
  margin 15px
  background #fff
  border 1px solid #e7e7e7

  &--header
    display flex
    align-items flex-start
    padding 15px

  &--title
    flex 1

  &--list
    flex 1
    display flex
    flex-direction column

  &--item
    display flex
    border-bottom 1px solid #e7e7e7

    &--header
      border-bottom 1px solid #ddd

  &--item-field
    flex 1
    padding 10px 15px
