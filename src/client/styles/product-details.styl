$gutter = 16px

.product-details
  //
  input, label, textarea
    width 100%
  textarea
    height 100px
  //
  .title
    margin $gutter
  .details
    display flex
    padding 0 ($gutter/2)
  .info, .photos
    flex 1
    margin 0 ($gutter/2)

  .published
    font-size 12px
    padding 0 0 $gutter 0
    display flex
    align-items center
    span
      flex 1
    input
      width auto

  .tags
    margin 0 0 30px 0
    padding 2.5x
    display flex
    flex-wrap wrap
    .tag
      height 32px
      margin 2.5px
      border-radius 16px
      background #e6e6e6
      padding 8px
      font-size 16px
      line-height 1
    input
      height 32px
      margin 2.5px
      padding 8px
      font-size 16px
      border none

  [type=file]
    visibility hidden
    width 0
  .photos label
    border 2px dashed #e7e7e7
    border-radius 15px
    margin 0
    padding 0
    height 125px
    display flex
    align-items center
    justify-content center

  .photos
    ul
      display flex
      align-items stretch
      flex-wrap wrap
      margin 7.5px
    li
      width 50%
      padding 7.5px
    img
      width 100%
