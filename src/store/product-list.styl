.product-list

  &--title
    font-size 1.4rem
    letter-spacing .2rem
    text-align center
    padding $gutter 0 $gutter 0
    height ($gutter * 3)
    display flex
    justify-content center
    align-items center

  &--list
    margin-top -($gutter/2)
    padding 0 ($gutter/2)
    display flex
    flex-wrap wrap

  &--item
    display block
    padding ($gutter/2)
    width 100%
    transition transform .5s
    &:hover
      transform scale(1.05)

    +above(450px)
      width 50%

    +above(800px)
      width 33.33%

    +above(1200px)
      width 25%

  &--thumbnail-container
    width 100%
    padding-bottom 133.33%
    position relative
    img
      position absolute
      top 0
      left 0
      width 100%
      height 100%

  &--thumbnail
    width 100%

  &--name
    text-align center
    font-size 1.4rem
    letter-spacing 0.1rem
    +above(800px)
      font-size 1.2rem

  &--price
    display flex
    align-items center
    justify-content center
    height ($gutter)
