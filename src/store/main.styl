@import url('https://fonts.googleapis.com/css?family=Playfair+Display:400i|Raleway:100,300,300i,400,400i&subset=latin-ext')

*
  margin 0
  padding 0
  border 0
  outline 0
  box-sizing border-box

ul
  list-style none

body
  font-size 16px
  color #666
  line-height 1.4em
  font-family 'Raleway', sans-serif
  font-weight 300
  overflow-x hidden

h1, h2, h3, h4, h5
  font-family 'Raleway'
  font-weight 300

html, body
  height 100%
  background-color #fff

a:link, a:visited
  color inherit
  text-decoration none

input
  -webkit-appearance none

$gutter = 24px

above(size)
  @media (min-width: size)
    {block}

.icon svg
  width 100%
  height 100%

.wrapper
  min-height 100%
  position relative
  transition transform .5s
  box-shadow 0 0 10px rgba(0,0,0,0.2)
  display flex
  flex-direction column

  /.js-nav-open &
    transform translate(210px, 0)

  +above(800px)
    flex-direction row

.header
  height 60px
  display flex
  border-bottom 1px solid #ccc

  .icon
    width 20px
    height 20px
    svg
      fill #444

  &--nav-toggler
    display flex
    align-items center
    justify-content center
    width 60px

  &--logo
    flex 2
    letter-spacing .2em
    font-size 1.6rem
    display flex
    align-items center
    justify-content center

  &--cart-toggler
    display flex
    align-items center
    justify-content center
    width 60px


  &--header-separator
    display none

  &--nav
    position fixed
    top 0
    left -210px
    width 210px

  &--nav-item a
    display block
    padding-left 15px
    line-height 3em
    border-bottom 1px solid #ccc

  +above(800px)
    height auto
    flex-direction column
    width (210 + $gutter * 2)px
    padding-left $gutter
    position static
    &--nav-toggler, &--cart-toggler
      display none
    &--logo
      height 60px
      flex 0 0 auto
      margin-top $gutter
    &--separator
      display block
      margin 10px 60px
      border-bottom 1px solid #aaa
    &--nav
      position static
      display block
    &--nav-item
      a
        padding $gutter
        line-height 1.6em
        border none
        text-align center

h1
  font-size 1.4em
  line-height 1em
  text-align center
  letter-spacing .2em
  padding $gutter 0 ($gutter/2) 0

.product-list
  padding 0 ($gutter/2);
  display flex
  flex-wrap wrap

  &--item
    display block
    padding ($gutter/2)
    width 100%

    +above(450px)
      width 50%

    +above(800px)
      width 33.33%

    +above(1200px)
      width 25%

  &--thumbnail
    width 100%

  &--details
    text-align center

  &--name
    font-size 1.2em
    line-height 1em
