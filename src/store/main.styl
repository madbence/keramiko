@import 'fonts.styl'

$gutter = 24px;
$font-size = 16px;
$font-color = #666;

*
  margin 0
  padding 0
  border 0
  outline 0
  box-sizing border-box

ul
  list-style none

html
  -webkit-text-size-adjust 100%
  -moz-text-size-adjust 100%
  -ms-text-size-adjust 100%
  text-size-adjust 100%

body
  font-size $font-size
  color $font-color
  line-height 1.6
  font-family 'Raleway', sans-serif
  font-weight 300
  overflow-x hidden

h1, h2, h3, h4, h5
  font-family 'Raleway', sans-serif
  font-weight 300

html, body
  height 100%
  background-color #fff

a:link, a:visited
  color inherit
  text-decoration none

above(size)
  @media (min-width: size)
    {block}

.icon svg
  width 100%
  height 100%

.wrapper
  min-height 100%
  position relative
  transition transform .5s
  box-shadow 0 0 10px rgba(0,0,0,0.25)
  display flex
  flex-direction column

  /.js-nav-open &
    transform translate(210px, 0)
  /.js-cart-open &
    transform translate(-80%, 0)

  +above(800px)
    flex-direction row

.cart
  width 80%
  position fixed
  left 100%
  top 0

  &--title
    height ($gutter * 3)
    letter-spacing .2rem
    font-size 1.6rem
    display flex
    align-items center
    justify-content center

.header
  height ($gutter * 3)
  display flex
  border-bottom 1px solid #ddd

  .icon
    width $gutter
    height $gutter
    svg
      fill #444

  &--nav-toggler, &--cart-toggler
    display flex
    align-items center
    justify-content center
    width ($gutter * 3)

  &--logo
    flex 2
    letter-spacing .4rem
    font-size 1.6rem
    display flex
    align-items center
    justify-content center

  &--header-separator
    display none

  &--nav
    position fixed
    top 0
    left -210px
    width 210px

  &--nav-item a
    display flex
    align-items center
    padding-left $gutter
    height ($gutter * 3)
    font-size 1.2rem
    letter-spacing .1rem
    border-bottom 1px solid #ddd

  +above(800px)
    height auto
    flex-direction column
    width (210 + $gutter * 2)px
    padding 0 $gutter
    position static
    &--nav-toggler, &--cart-toggler
      display none
    &--logo
      height 60px
      flex 0 0 auto
      margin $gutter 0 $gutter 0
    &--separator
      display block
      margin 0 60px $gutter 60px
      border-bottom 1px solid #aaa
    &--nav
      position static
      display block
    &--nav-item a
      font-size 1.1rem
      letter-spacing 0.1rem
      padding 0
      justify-content center
      border none
      transition color .2s
      &:hover
        color #888
main
  display flex
  flex-direction column

.carousel
  overflow hidden
  position relative
  padding-bottom 75%

  &--container
    width 100%
    display flex
    position absolute
    transform translate(0, 0)
    transition transform .5s

  &--slide
    flex-shrink 0
    position relative
    width 100%
    padding-bottom 75%
    img
      position absolute
      top 0
      left 0
      width 100%

  +above(1200px)
    padding 0
    height 750px

.product-list

  &--title
    font-size 1.4rem
    letter-spacing .2rem
    text-align center
    padding $gutter 0 $gutter 0
    height ($gutter * 3)
    display flex
    justify-content center
    align-items center

  &--list
    margin-top -($gutter/2)
    padding 0 ($gutter/2)
    display flex
    flex-wrap wrap

  &--item
    display block
    padding ($gutter/2)
    width 100%
    transition transform .5s
    &:hover
      transform scale(1.05)

    +above(450px)
      width 50%

    +above(800px)
      width 33.33%

    +above(1200px)
      width 25%

  &--thumbnail-container
    width 100%
    padding-bottom 133.33%
    position relative
    img
      position absolute
      top 0
      left 0
      width 100%
      height 100%


  &--thumbnail
    width 100%

  &--name
    text-align center
    font-size 1.4rem
    letter-spacing 0.1rem
    +above(800px)
      font-size 1.2rem

  &--price
    display flex
    align-items center
    justify-content center
    height ($gutter)

.promo
  text-align center

  &--title
    font-size 1.4rem
    padding $gutter $gutter ($gutter/2) $gutter
  &--content
    padding 0 $gutter ($gutter/2) $gutter

.footer
  display flex
  flex-direction column
  text-align center
  padding 0 ($gutter/2)

  +above(800px)
    flex-direction row
    text-align left

.about
  padding 0 ($gutter/2)
  +above(800px)
    flex 3

  &--title
    font-size 1.3rem
    padding $gutter 0 ($gutter/2) 0
  &--content
    padding 0 0 ($gutter/2) 0
    font-weight 300

.connect
  padding 0 ($gutter/2)
  +above(800px)
    flex 2

  &--title
    font-size 1.3rem
    padding $gutter 0 ($gutter/2) 0

  &--newsletter
    display flex
    +above(800px)
      justify-content flex-start

    input
      display block
      flex 1

    button
      width 48px

input
  font-family 'Raleway', sans-serif
  font-size $font-size
  font-weight 300
  border 1px solid #ddd
  border-radius 0
  padding ($gutter/2)
  height 48px
  background #fafafa
  color $font-color
  -webkit-appearance none

button
  font-family 'Raleway', sans-serif
  font-size $font-size
  font-weight 300
  height 48px
  border 1px solid #ddd
  border-left 0
  background #fafafa
  color $font-color
  padding ($gutter/2)
  cursor pointer
  &:hover
    background #f6f6f6

.product
  &--title
    font-size 1.6em
    letter-spacing 0.2em
    display flex
    justify-content center
    align-items center
    height ($gutter*3)
  &--details
    padding 0 ($gutter/2)
    display flex
    flex-direction column
  &--info
    padding 0 ($gutter/2)
  &--preview
    padding 0 ($gutter/2)
    img
      width 100%
  &--price
    font-size 1.3rem
    text-align center
    padding ($gutter/2) 0
  &--description
    text-align center
    padding ($gutter/2) 0
  &--add-to-cart
    padding ($gutter/2) 0
    display flex
    input
      flex 1
    button
      display flex
      align-items center
    svg
      fill #888

  +above(800px)
    &--title
      height 60px
      margin $gutter
    &--preview
      flex 3
      display flex
      justify-content center
      align-items center
      img
        width auto
        max-width 100%
        max-height 750px
    &--details
      flex 2
    &--info
      display flex
      flex-direction row
    &--price, &--description
      text-align left
