.product

  &--title
    font-size 1.6em
    letter-spacing 0.2em
    display flex
    justify-content center
    align-items center
    height ($gutter*3)

  &--details
    padding 0 ($gutter/2)
    display flex
    flex-direction column

  &--info
    padding 0 ($gutter/2)

  &--preview
    padding 0 ($gutter/2)

    img
      width 100%

  &--price
    font-size 1.3rem
    text-align center
    padding ($gutter/2) 0

  &--description
    text-align center
    padding ($gutter/2) 0

  &--add-to-cart
    padding ($gutter/2) 0
    display flex

    input
      flex 1

    button
      display flex
      align-items center
      border-left none

    svg
      fill #888

  +above(800px)
    &--title
      height 60px
      margin $gutter

    &--preview
      flex 3
      display flex
      justify-content center
      align-items center

      img
        width auto
        max-width 100%
        max-height 750px

    &--details
      flex 2

    &--info
      display flex
      flex-direction row

    &--price, &--description
      text-align left
